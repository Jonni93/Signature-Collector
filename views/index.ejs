<html>
<head>
  <meta charset="utf-8">

  <title>Undirskriftarsíða</title>

  <!-- <link rel="stylesheet" href="css/reset.css"> -->
  <link rel="stylesheet" href="css/styles.css">
  
</head>

<body>
    <h1>Undirskriftarlisti</h1>
    <form method="post" action="/post-safe">
      <div class="labels">
        <label for="name">nafn: </label>
        <label for="nationalId">Kennitala: </label>
        <label for="comment">Athugasemd: </label>
      </div>
      <div class="inputs">
        <input type="text" name="name" value="Kristinn">      
        <input type="text" name="nationalId">      
        <input type="text" name="comment" value='Mitt comment hallo heimur'>
      </div>
      <div class="check">
        <input type="checkbox" name="anonymous" unchecked>        
        <label for="name">Ekki birta nafn á lista </label>
      </div>
      
      <button>Senda</button>
    </form>
    <hr>

    <h1>Undirskriftir: </h1>
    <% if (empty != false) { %>
      <h2><%= empty %></h2>
    <% } else { %> 
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Nafn</th>
          <th>Athugasemd</th>
        </tr>
      </thead>
      <tbody>

         <% for (let i = 0; i < data.length; i++) { %>
         <tr> 
          <td><%= formattedDates[i] %></td>
          <td><%= data[i].anonymous == false ? data[i].name : '--- nafnleynd ---' %></td>
          <td><%= data[i].comment %></td>
        </tr>
        <% } %>
      
    </tbody>
  </table>
  <% } %>
  
</body>
</html>