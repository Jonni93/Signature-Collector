  <link rel="stylesheet" href="css/styles.css">
  
</head>

<body>

    <h1>Undirskriftarlisti</h1>
    <form method="post" action="/post-safe">
      <div class="labels">
        <label for="name">nafn: </label>
        <label for="nationalId">Kennitala: </label>
        <label for="comment">Athugasemd: </label>
      </div>
      <div class="inputs">
        <input type="text" name="name" value='asd'>      
        <input type="text" name="nationalId" value='000'>      
        <input type="text" name="comment" value='asdasd'>
      </div>
      <div class="check">
        <input type="checkbox" name="anonymous" unchecked>
        <!-- <input type="checkbox" name="anonymous" value="false"> -->
        
        <label for="name">Ekki birta nafn รก lista </label>
      </div>
      
      <button>Senda</button>
    </form>
    <hr>

    <h1>Undirskriftir: </h1>
    <% if (empty != false) { %>
      <h2><%= empty %></h2>
    <% } else { %> 
    <table>
      <thead>
        <tr>
          <th>id</th>
          <th>Nafn</th>
          <th>Athugasemd</th>
        </tr>
      </thead>
      <tbody>

        <% <for (let i = 0; i < data.length; i++) { %>
         <tr> 
          <td><%= data[i].signed %></td>
          <td><%= data[i].name %></td>
          <td><%= data[i].comment %></td>
        </tr>
        <% } %>
        
        <% data.forEach(d => { %>
        <tr>
          <td><%= d.signed %></td>
          <td><%= d.name %> </td>
          <td><%= d.comment %> </td>
        </tr>
        <% }) %>
      
    </tbody>
  </table>
  <% } %>
  
</body>
</html>